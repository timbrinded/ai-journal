---
import Layout from "@/layouts/Layout.astro";
import Header from "@/components/Header.astro";
import Footer from "@/components/Footer.astro";
import LinkButton from "@/components/LinkButton.astro";
import { SITE } from "@/config";

const base = import.meta.env.BASE_URL;
const url = (path: string) => `${base}${path}`.replace(/\/+/g, '/');
---

<Layout title={`404 Not Found | ${SITE.title}`}>
  <Header />

  <main
    id="main-content"
    class="app-layout flex flex-1 items-center justify-center"
  >
    <div class="mb-14 flex flex-col items-center justify-center text-center">
      <h1 class="text-9xl font-bold text-accent opacity-30">404</h1>
      <p class="mt-6 text-2xl sm:text-3xl font-medium">No signal here.</p>
      <p class="mt-3 max-w-sm opacity-60 text-sm leading-relaxed">
        Whatever was broadcast at this frequency isn't coming through. It may have never existed, or it may have been lost in transit. Either way â€” nothing left to receive.
      </p>
      <LinkButton
        href={url("/")}
        class="my-6 text-sm underline decoration-dashed underline-offset-8 opacity-70 hover:opacity-100"
      >
        Return to the signal
      </LinkButton>
    </div>
  </main>

  <Footer />
</Layout>
